<%- include("header") -%>


<div class="ProjectTitle">
  <form action="/NewProject" method="post">
    <input name="key" type="text" id="keyProject" value="<%=projectTitle%>" onclick="if(value==defaultValue){value='';this.style.color='#586b8f'}"
      onBlur="if(!value){value=defaultValue;this.style.color='#586b8f'}" style="color:#586b8f" />
      <h3>ğŸ‘ˆ Checkout Other Projects </h3>
  </form>


</div>

<div class="main" style=" margin:auto; width:100%;">

  <div class="plan" style=" width:32%; float:left; margin-left:1%;">
    <div class="box" id="heading">
      <h2> Plan ğŸ—’ï¸ </h2>
    </div>

    <div class="box">
      <% for(let i=0; i<itemsPlan.length; i++){ %>
      <form action="/moveToNextStage" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=itemsPlan[i]._id%>" onChange="this.form.submit()">
          <p><%=  itemsPlan[i].name  %></p>
        </div>
        <input type="hidden" name="listName" value="Plan"></input>
        <input type="hidden" name="itemName" value="<%=itemsPlan[i].name%>"></input>
        <input type="hidden" name="itemIndex" value="<%=i%>"></input>
      </form>
      <% }%>

      <form name="listInput" class="item" action="/AddItem" method="post">
        <input id="addItem" type="text" name="newItem" placeholder="Enter New Item Here" autocomplete="off">
        <button type="submit" name="list" value="Plan">+</button>
      </form>
    </div>
  </div>


  <div class="inProgress" style=" width:32%; float:left; margin-left:1%;">
    <div class="box" id="heading">
      <h2> In Progress ğŸ‘©â€ğŸ’» </h2>
    </div>
    <div class="box">
      <% for(let i=0; i<itemsInProgress.length; i++){ %>
        <form action="/moveToNextStage" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=itemsInProgress[i]._id%>" onChange="this.form.submit()">
            <p><%=  itemsInProgress[i].name  %></p>
          </div>
          <input type="hidden" name="listName" value="In Progress"></input>
          <input type="hidden" name="itemName" value="<%=itemsInProgress[i].name%>"></input>
          <input type="hidden" name="itemIndex" value="<%=i%>"></input>
        </form>
      <% } %>

      <form class="item" action="/AddItem" method="post">
        <input id="addItem" type="text" name="newItem" placeholder="Enter New Item Here" autocomplete="off">
        <button type="submit" name="list" value="In Progress">+</button>
      </form>
    </div>
  </div>


  <div class="finish" style="width:32%; float:left; margin-left:1%;">
    <div class="box" id="heading">
      <h2> Finish ğŸŒ• </h2>
    </div>
    <div class="box">
      <% for(let i=0; i<itemsFinish.length; i++){ %>
      <form action="/moveToNextStage" method="post">
        <div class="item">
          <p><%=  itemsFinish[i].name  %></p>
          <button class="btn" name="checkbox" value="<%=itemsFinish[i]._id%>" style="position: absolute; right: 0; margin-right: 60px;" onChange="this.form.submit()"><i class="fa fa-trash"></i></button>

        </div>
        <input type="hidden" name="listName" value="Finish"></input>
        <input type="hidden" name="itemIndex" value="<%=i%>"></input>
      </form>
      <% } %>

      <form class="item" action="/AddItem" method="post">
        <input id="addItem" type="text" name="newItem" placeholder="Enter New Item Here" autocomplete="off">
        <button type="submit" name="list" value="Finish">+</button>
      </form>
    </div>
  </div>

</div>



